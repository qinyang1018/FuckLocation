<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/lat_long_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latLong"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/lat_long_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lat_long_title"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/other_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECI/NCI,Pci,Tac,Earfcn/nrArfcn,Bandwidth"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lat_long_title"></TextView>

    <TextView
        android:id="@+id/other_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_title"></TextView>

    <ImageView
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/fake_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_check_circle_24"
        ></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>